{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@/shared/*": ["./shared/*"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*", "shared/**/*"],
  "exclude": ["node_modules", "src/tests", "web", "dist"]
}
